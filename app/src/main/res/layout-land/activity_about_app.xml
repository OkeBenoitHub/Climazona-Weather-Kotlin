<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:background="@color/main_bg_app_color">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg_app_color"
            tools:context=".ui.activities.AboutAppActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="16dp"
                android:paddingLeft="@dimen/main_layout_padding"
                android:paddingRight="@dimen/main_layout_padding"
                android:layout_height="wrap_content">

                <!-- Main Header -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/main_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/lato_heavy"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/smart_weather_app_header_text"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/content_header_color" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/main_header">

                    <!-- report an issue -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/report_issue_action_btn"
                        style="@style/Widget.MaterialComponents.FloatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:contentDescription="@string/report_an_issue_text"
                        app:backgroundTint="@color/white"
                        app:elevation="4dp"
                        app:maxImageSize="34dp"
                        app:rippleColor="@color/color_tint_floating_action_button_icon"
                        app:srcCompat="@drawable/ic_action_report_issue"
                        app:tint="@color/color_tint_floating_action_button_icon" />

                    <!-- weather icon -->
                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:adjustViewBounds="false"
                        android:contentDescription="@string/weather_icon_app_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/weather_256" />

                    <!-- feedback button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/feedback_action_btn"
                        style="@style/Widget.MaterialComponents.FloatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:contentDescription="@string/share_app_text"
                        app:backgroundTint="@color/white"
                        app:elevation="4dp"
                        app:maxImageSize="34dp"
                        app:rippleColor="@color/color_tint_floating_action_button_icon"
                        app:srcCompat="@drawable/ic_action_feedback"
                        app:tint="@color/color_tint_floating_action_button_icon"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

                <!-- access weather button -->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/icon_layout"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:id="@+id/access_weather_btn_lyt"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/button_round"
                    app:mrl_rippleColor="@color/colorPrimaryDark"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="20dp">

                    <Button
                        android:id="@+id/accessWeatherBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/access_weather_btn_text"
                        android:textColor="@color/color_button_bg_white_text_color"
                        android:textStyle="bold" />

                </com.balysv.materialripple.MaterialRippleLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/about_app_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@id/access_weather_btn_lyt">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/lato_medium"
                        android:padding="8dp"
                        android:text="@string/climazona_helps_you"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/darker_gray" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/about_app_head">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/about_app_content_1"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/about_content_color"
                        app:drawableStartCompat="@drawable/ic_location_64_" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_bg_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/about_app_content_2"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/about_content_color"
                        app:drawableStartCompat="@drawable/ic_forecast_64" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_bg_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/about_app_content_3"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/about_content_color"
                        app:drawableStartCompat="@drawable/ic_notification" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_bg_color" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>